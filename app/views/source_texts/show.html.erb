<div style="margin-bottom: 20px;">
  <%= link_to "← Back to Source Texts", source_texts_path, style: "text-decoration: none; color: #666;" %>
</div>

<h1><%= @source_text.title %></h1>

<% if @source_text.gutenberg_id.present? %>
  <p style="color: #666; margin-bottom: 20px;">
    <strong>Source:</strong> Project Gutenberg #<%= @source_text.gutenberg_id %>
    <a href="https://www.gutenberg.org/ebooks/<%= @source_text.gutenberg_id %>" target="_blank" style="margin-left: 10px;">
      View on Project Gutenberg ↗
    </a>
  </p>
<% end %>

<div style="margin: 20px 0;">
  <%= link_to "Generate Cut-Up Poem", generate_cut_up_source_text_path(@source_text), 
      style: "background-color: #007bff; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px;" %>
</div>

<div style="background-color: #f8f9fa; padding: 20px; border-radius: 5px; margin-top: 20px;">
  <h3>Text Content</h3>
  <div style="max-height: 400px; overflow-y: auto; border: 1px solid #ddd; padding: 15px; background-color: white; font-family: Georgia, serif; line-height: 1.6;">
    <%= simple_format(@source_text.content) %>
  </div>
  
  <p style="margin-top: 15px; color: #666; font-size: 14px;">
    <strong>Length:</strong> <%= number_with_delimiter(@source_text.content.length) %> characters, 
    approximately <%= number_with_delimiter(@source_text.content.split.length) %> words
  </p>
</div>
